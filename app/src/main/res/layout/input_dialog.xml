<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/textviewdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to add?"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="20dp"
        android:textColor="@color/background"/>

    <EditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewdialog"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_custom"
        android:fontFamily="@font/poppins_light"
        android:hint="Enter name here"
        android:padding="10dp"
        android:textColor="@color/background"
        android:textColorHint="@color/gray"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/input_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_custom"
        android:fontFamily="@font/poppins_light"
        android:hint="Enter url here"
        android:padding="10dp"
        android:textColor="@color/background"
        android:textColorHint="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/spinner_prompt_text"
        android:layout_below="@id/input_url"
        android:layout_marginHorizontal="30dp"
        android:text="Choose type below:"
        android:textColor="@color/background"
        android:fontFamily="@font/poppins_light"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:gravity="center"
        android:popupBackground="@color/background"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_prompt_text"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_button"
        android:paddingHorizontal="50dp"
        android:text="Submit"
        android:textColor="@color/white" />


</RelativeLayout>